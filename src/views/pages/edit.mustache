{{>partials/header}}

<main class="edit-form">
    <h2>Editar Usu√°rio</h2>
    <form method="POST" action="/users/user/update">
        <fieldset>
            <legend>Editar</legend>
            <div class="box-input idUser">
                <label for="idUser"> ID: </label>
                <input
                    type="text"
                    id="idUser"
                    name="id"
                    value="{{id}}"
                    readonly
                />
            </div>
            <div class="box-input">
                <label for="name"> Nome: </label>
                <input
                    type="text"
                    placeholder="Digite seu nome"
                    id="name"
                    required
                    name="name"
                    value="{{user.name}}"
                />
            </div>
            <div class="box-input">
                <label for="age"> Idade: </label>
                <input
                    type="number"
                    id="age"
                    placeholder="Digite sua idade"
                    name="age"
                    value="{{user.age}}"
                />
            </div>
            <div class="box-input">
                <label for="email"> E-mail: </label>
                <input
                    type="text"
                    id="email"
                    placeholder="Digite seu e-mail"
                    name="email"
                    value="{{user.email}}"
                    required
                />
            </div>
            <div class="edit-option">
                <input
                    class="btn-form"
                    type="submit"
                    value="Confirmar"
                /> 
                <a class="btn-form" href="/">Cancelar</a>
            </div>
        </fieldset>
    </form>
</main>

{{>partials/footer}}